{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell Interactive Session",
            "type": "PowerShell",
            "request": "launch",
            "cwd": ""
        },
        {
            "name": "PowerShell Attach to Host Process",
            "type": "PowerShell",
            "request": "attach",
            "runspaceId": 1
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Receiver with Dapr (nodejs)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/receiver/app.js",
            "preLaunchTask": "daprd-debug-node",
            "postDebugTask": "daprd-down-node"
        },
        {
            "type": "python",
            "request": "launch",
            "name": "Sender with Dapr (python)",
            "program": "${workspaceFolder}/sender/app.py",
            "console": "integratedTerminal",
            "preLaunchTask": "daprd-debug-python",
            "postDebugTask": "daprd-down-python"
        }
    ],
    "compounds": [
        {
            "name": "Sender/Receiver Dapr",
            "configurations": [
                "Receiver with Dapr (nodejs)",
                "Sender with Dapr (python)"
            ]
        }
    ]
}